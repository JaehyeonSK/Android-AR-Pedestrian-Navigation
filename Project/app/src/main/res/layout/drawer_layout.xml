<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    android:id="@+id/drawer_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:id="@+id/frameMap"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <Button android:id="@+id/btnPath" android:text="경로표시" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentStart="true" android:layout_margin="5dp"/>
            <Button android:id="@+id/btnCurrent" android:text="현재위치" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toEndOf="@id/btnPath" android:layout_margin="5dp"/>
        </RelativeLayout>
    </FrameLayout>
    <ListView
        android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:layout_gravity="start"
        android:background="#111"
        />
</android.support.v4.widget.DrawerLayout>